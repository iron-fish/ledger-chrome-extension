{
    "manifest_version": 3,
    "name": "Ledger Demo",
    "description": "Ledger Demo",
    "version": "1.1.1",
    "action": {
        "default_icon": {
            "16": "icon-16.png",
            "48": "icon-48.png",
            "128": "icon-128.png"
        },
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "js/backgroundPage.js"
    },
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "host_permissions": [
        "https:\/\/*/*"
    ],
    "permissions": [
        "tabs",
        "activeTab",
        "notifications",
        "scripting",
        "offscreen"
    ]
}